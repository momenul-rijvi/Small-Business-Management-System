@model List<BusinessManagementSystem.Models.Purchase>


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .right-container {
        /*border: 5px solid #C71585;*/
        float: left;
        width: 57.65%;
        height: 200px;
        margin: 10px 5px;
    }
</style>
<div class="container-box">

    <div class="right-container">
        <form method="POST" class="form-horizontal" enctype="multipart/form-data">
            <div class="form-group">
                <label class="col-sm-2 control-label">Start Date</label>
                <div class="col-sm-10">
                    <input name="StarDate" type="date" class="form-control" placeholder="Start Date">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">End Date</label>
                <div class="col-sm-10">
                    <input name="EndDate" type="date" class="form-control" placeholder="End Date">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-success">Get Records Between Dates</button>
                </div>
            </div>
        </form>

        <br />
        <div style="padding-left: 450px; text-align: center; font-weight: bold; font-size: 25px;">Purchase Report</div>

        <br />

    </div>

    @if (Model != null && Model.Count > 0)
    {

        <div>
            @{ var sl = 0; }
            <table class="table table-bordered table-striped">
                <thead>
                    <tr style="background-color: goldenrod; color: white; font-weight: bold">
                        <th>Sl</th>
                        <th>Product ID</th>
                        <th>Product Name</th>
                        <th>Product Quantity</th>
                        <th>Product Price</th>
                        <th>Total Price</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@(++sl)</td>
                            <td>@product.SupplierId</td>
                            <td>@product.Product.Name</td>
                            @*<td>@product.Quantity</td>
                            <td>@product.UnitPrice</td>
                            <td>@(product.UnitPrice * product.Quantity)</td>*@

                        </tr>
                    }

                </tbody>
            </table>
        </div>
    }


</div>
