@model List<BusinessManagementSystem.Models.Supplier>
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .container {
        background-attachment: fixed;
    }
</style>


<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-save my-5">
                    <div class="card-body">
                        <h5 class="card-title text-center"><strong>Supplier Profile Entity</strong></h5>
                        <form method="POST" class="form-save" enctype="multipart/form-data">
                            <div class="form-label-group">
                                <label for="inputCode"> Code</label>
                                <input type="text" id="Code" name="Code" class="form-control" placeholder="Supplier Code" required autofocus>

                            </div>
                            <div class="form-label-group">
                                <label for="inputName"> Name</label>
                                <input type="text" id="Name" name="Name" class="form-control" placeholder="Supplier Name" required autofocus>

                            </div>
                            <div class="form-label-group">
                                <label for="inputAddress"> Address</label>
                                <input type="text" id="Address" name="Address" class="form-control" placeholder="Supplier Address" required autofocus>

                            </div>
                            <div class="form-label-group">
                                <label for="inputEmail"> Email</label>
                                <input type="text" id="Email" name="Email" class="form-control" placeholder="Supplier Email" required autofocus>

                            </div>
                            <div class="form-label-group">
                                <label for="inputNumber"> Number</label>
                                <input type="text" id="ContactNumber" name="ContactNumber" class="form-control" placeholder="Supplier Contact Number" required autofocus>

                            </div>
                            <div class="form-label-group">
                                <label for="inputContactName">Contact Person Name</label>
                                <input type="text" id="ContactPerson" name="ContactPerson" class="form-control" placeholder="Contact Person belong this supplier" required autofocus>

                            </div>
                            <br />
                            <div>
                                <input type="file" name="Uploadfiles" class="btn btn-primary" multiple />
                            </div>
                            <br />
                            <button class="btn btn-lg btn-info btn-block text-uppercase" type="submit">Save</button>
                        </form>
                    </div>

                </div>


            </div>
        </div>
    </div>
    <br />
</body>
@if (Model != null && Model.Count > 0)
{
    <div>
        @{var sl = 0;}
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Sl</th>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Email</th>
                    <th>Contact Number</th>
                    <th>Contact Person</th>
                    <th>Image</th>
                    <th>Action</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var Suppliers in Model)
                {
                    <tr>
                        <td>@(++sl)</td>
                        <td>@Suppliers.Code</td>
                        <td>@Suppliers.Name</td>
                        <td>@Suppliers.Address</td>
                        <td>@Suppliers.Email</td>
                        <td>@Suppliers.ContactNumber</td>
                        <td>@Suppliers.ContactPerson</td>

                        <td>
                            @{
                    var file = Convert.ToBase64String(Suppliers.File);
                    var image = string.Format("data:image/gif; base64," + file + "");
                            }
                            <img class="img-responsive img-thumbnail" src="@image" style=" width: 100px; height: 100px;" />
                        </td>


                        <td>
                            @Html.ActionLink("Edit", "Update", "Suppliers", new { id = Suppliers.Id }, new { @target = "_self" })
                            @Html.ActionLink("Delete", "Delete", "Suppliers", new { id = Suppliers.Id }, new { @target = "_self" })

                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
}























