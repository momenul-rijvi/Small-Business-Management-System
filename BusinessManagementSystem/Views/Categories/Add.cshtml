@model List<BusinessManagementSystem.Models.Category>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <form method="POST" class="form-horizontal" enctype="multipart/form-data">
        <div class="form-group">
            <label class="col-sm-2 control-label">Code</label>
            <div class="col-sm-10">
                <input name="Code" type="text" class="form-control" placeholder="Code">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Name</label>
            <div class="col-sm-10">
                <input name="Name" type="text" class="form-control" placeholder="Name">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-success">Save</button>
            </div>
        </div>
    </form>
    @if (Model != null && Model.Count > 0)
    {
        <div>
            @{var sl = 0;}
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Sl</th>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Action</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@(++sl)</td>
                            <td>@category.Code</td>
                            <td>@category.Name</td>


                            <td>
                                @Html.ActionLink("Edit", "Edit", "Categories", new { id = category.Id }, new { @target = "_self" })
                                @Html.ActionLink("Delete", "Delete", "Categories", new { id = category.Id }, new { @target = "_self" })
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    }

</div>
